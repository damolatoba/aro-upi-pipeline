{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String",
            "metadata": {
                "description": "Location"
            }
        },
        "resource_group": {
            "type": "String",
            "metadata": {
                "description": "Resource Group for cluster and user defineds azure resources"
            }
        },
        "aro_components_resource_group": {
            "type": "String",
            "metadata": {
                "description": "Resource Group for cluster azure resources"
            }
        },
        "domain": {
            "defaultValue": "[toLower(substring(uniqueString(resourceGroup().id), 0, 8))]",
            "type": "String",
            "metadata": {
                "description": "Custom Domain Prefix, autogenerated by default"
            }
        },
		"pullSecret": {
            "type": "String",
            "metadata": {
                "description": "Pull secret from cloud.redhat.com. The json should be input as a string"
            }
        },
        "clusterName": {
            "type": "String",
            "metadata": {
                "description": "Unique name for the cluster"
            }
        },
        "apiServerVisibility": {
            "defaultValue": "Public",
            "allowedValues": [
                "Private",
                "Public"
            ],
            "type": "String",
            "metadata": {
                "description": "Api Server Visibility (Default to Public API visibility)"
            }
        },
        "ingressVisibility": {
            "defaultValue": "Public",
            "allowedValues": [
                "Private",
                "Public"
            ],
            "type": "String",
            "metadata": {
                "description": "Ingress Visibility (Default to Public Load Balancer)"
            }
        },
        "aadClientId": {
            "type": "String",
            "metadata": {
                "description": "The Application ID of an Azure Active Directory client application"
            }
        },
        "aadClientSecret": {
            "type": "SecureString",
            "metadata": {
                "description": "The secret of an Azure Active Directory client application"
            }
        },
        "workerSubnetId": {
            "type": "String",
            "metadata": {
                "description": "Worker node subnet address space"
            }
        },
        "masterSubnetId": {
            "type": "String",
            "metadata": {
                "description": "Master node subnet address space"
            }
        },
        "masterVmSize": {
            "defaultValue": "Standard_D8s_v3",
            "type": "String",
            "metadata": {
                "description": "Master Node VM Type"
            }
        },
        "workerVmSize": {
            "defaultValue": "Standard_D4s_v3",
            "type": "String",
            "metadata": {
                "description": "Worker Node VM Type (Default to Standard_D4s_v3)"
            }
        },
        "workerVmDiskSize": {
            "defaultValue": 128,
            "type": "Int",
            "metadata": {
                "description": "Worker Node Disk Size in GB"
            }
        },
        "workerCount": {
            "defaultValue": 3,
            "type": "Int",
            "metadata": {
                "description": "Number of Worker Nodes (Default to 3 Worker Nodes)"
            }
        },
        "podCidr": {
            "defaultValue": "10.128.0.0/14",
            "type": "String",
            "metadata": {
                "description": "Cidr for Pods"
            }
        },
        "serviceCidr": {
            "defaultValue": "172.30.0.0/16",
            "type": "String",
            "metadata": {
                "decription": "Cidr of service"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.RedHatOpenShift/OpenShiftClusters",
            "apiVersion": "2020-04-30",
            "name": "[parameters('clusterName')]",
            "location": "[parameters('location')]",
            "properties": {
                "apiserverProfile": {
                    "visibility": "[parameters('apiServerVisibility')]"
                },
                "clusterProfile": {
                    "domain": "[parameters('domain')]",
                    "resourceGroupId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('aro_components_resource_group'), '-', parameters('domain'))]",
					"pullSecret": "[parameters('pullSecret')]"
                },
                "consoleProfile": {},
                "ingressProfiles": [
                    {
                        "name": "default",
                        "visibility": "[parameters('ingressVisibility')]"
                    }
                ],
                "masterProfile": {
                    "vmSize": "[parameters('masterVmSize')]",
                    "subnetId": "[parameters('masterSubnetId')]"
                },
                "networkProfile": {
                    "podCidr": "[parameters('podCidr')]",
                    "serviceCidr": "[parameters('serviceCidr')]"
                },
                "provisioningState": "Creating",
                "servicePrincipalProfile": {
                    "clientId": "[parameters('aadClientId')]",
                    "clientSecret": "[parameters('aadClientSecret')]"
                },
                "workerProfiles": [
                    {
                        "name": "worker",
                        "vmSize": "[parameters('workerVmSize')]",
                        "diskSizeGB": "[parameters('workerVmDiskSize')]",
                        "subnetId": "[parameters('workerSubnetId')]",
                        "count": "[parameters('workerCount')]"
                    }
                ]
            }
        }
    ],
    "outputs": {
        "clusterID": {
            "type": "string",
            "value": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', parameters('resource_group'), '/providers/Microsoft.RedHatOpenShift/OpenShiftClusters/', parameters('clusterName')) ]"
        }
    }
}